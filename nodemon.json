{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules", "dist"],
  "exec": "ts-node --project tsconfig.dev.json -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "verbose": false,
  "restartable": "rs",
  "colours": true,
  "events": {
    "restart": "echo 'ðŸ”„ Restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Application crashed!'"
  }
}
